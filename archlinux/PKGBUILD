pkgname=minidlna-wolfhechel-git
pkgver() {
  cd "$srcdir/$pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}
pkgrel=1
pkgdesc="A DLNA/UPnP-AV Media server (aka ReadyDLNA)"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/minidlna/"
license=('GPL')
depends=('libexif' 'libjpeg' 'libid3tag' 'flac' 'libvorbis' 'ffmpeg' 'sqlite')
makedepends=('cmake' 'git')
backup=('etc/minidlna.conf')
install=minidlna.install
source=("$pkgname::git+https://github.com/wolfhechel/minidlna#branch=develop")
md5sums=('SKIP'
         '1f53adef7dfa12c1d4636737366b1d39'
         'a61f97b037ea17555f6632b3ffd761ef'
         '5b2a57160589dfd559a23b1a7f365a23')
conflicts=('minidlna')

prepare() {
  mkdir "$srcdir/build"
  cd "$srcdir/build"
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr \
        -DCMAKE_INSTALL_SYSCONFDIR:PATH=/etc "$srcdir/$pkgname"
}

build() {
  cd "$srcdir/build"
  make
}

package() {
  cd "$srcdir/build"
  DESTDIR=$pkgdir make install
}
